<%- include('includes/head') %> <%- include('includes/nav') %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8">
      <h1 class="text-center my-3">Contatos</h1>
      <p class="text-center lead">Crie ou edite um contato</p>

      <form action="/contato/register" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <div class="mb-3">
          <label class="form-label">Nome</label>
          <input
            value="<%= contato.name %>"
            type="text"
            class="form-control"
            name="name"
          />
        </div>
        <div class="mb-3">
          <label class="form-label">Sobrenome</label>
          <input
            value="<%= contato.lastname %>"
            type="text"
            class="form-control"
            name="lastname"
          />
        </div>
        <div class="mb-3">
          <label class="form-label">Email</label>
          <input
            value="<%= contato.email %>"
            type="email"
            class="form-control"
            name="email"
          />
        </div>
        <div class="mb-3">
          <label class="form-label">Telefone</label>
          <input
            value="<%= contato.phone %>"
            type="tel"
            class="form-control"
            name="phone"
          />
        </div>
        <button type="submit" class="btn btn-primary">Cadastrar</button>
      </form>
      <%- include('includes/messages'); %>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>
<%- include('includes/footer') %>
